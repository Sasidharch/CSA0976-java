import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;

public class NameSorter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        // Get the number of names from the user
        System.out.print("Enter the number of names: ");
        int numNames = scanner.nextInt();
        scanner.nextLine(); // Consume the newline
        
        // Get the names from the user
        ArrayList<String> names = new ArrayList<>();
        for (int i = 0; i < numNames; i++) {
            System.out.print("Enter name #" + (i + 1) + ": ");
            String name = scanner.nextLine();
            names.add(name);
        }
        
        // Ask the user for sorting order
        System.out.print("Enter 'A' for Ascending or 'D' for Descending: ");
        String sortOrder = scanner.nextLine().toUpperCase();
        
        // Sort the names accordingly
        switch (sortOrder) {
            case "A":
                Collections.sort(names);
                break;
            case "D":
                Collections.sort(names, Collections.reverseOrder());
                break;
            default:
                System.out.println("Invalid input! Exiting...");
                return;
        }
        
        // Print the sorted names
        System.out.println("Sorted names:");
        for (String name : names) {
            System.out.println(name);
        }
    }
}
